
{
    "compileOnSave": true,

    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./",
        "outDir": "./public/build",
        "sourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop":  true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },

    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/public/"
    ]
}
